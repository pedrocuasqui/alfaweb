<div id="interfaz-modulos" v-cloak>

  <modulo-contenedor-curso :navegar-atras="navegarAtras" :navegar-siguiente="navegarSiguiente" :curso="curso"
    :objeto-seleccionado="objetoSeleccionado" :breadcrumb="breadcrumb" :usuario="usuario"
    @evaluacion-individual="evaluacionIndividual" ref="curso" :mostrar-icono-repetir="mostrarIconoRepetir" @intentar-nuevamente="intentarNuevamente"> <!--mostrarIconoRepetir es una varible de tipo Boolean-->

    <!-- si el contenido retornado es un submodulo se permiten las evaluaciones -->
    <template v-if="objetoSeleccionado.nombreSubmodulo">
      <modulo-ev-individual v-if="evIndividual" :submodulo="objetoSeleccionado" :usuario="usuario" @finaliza-evaluacion="finalizaEvaluacion" ref="componenteEvaluacion" >

      </modulo-ev-individual>
      <div v-else>
        <!-- CONTENIDO MULTIMEDIA -->
        <div v-html="objetoSeleccionado.contenidoTiny"></div>
      </div>
    </template>

    <!-- si el contenido retornado es un MODULO no existen evaluaciones -->
    <template v-else>

      <!-- CONTENIDO MULTIMEDIA -->
      <div v-html="objetoSeleccionado.contenidoTiny"></div>

    </template>
  </modulo-contenedor-curso>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>