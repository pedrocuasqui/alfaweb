<link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
<div id="inicio" v-cloak>

  <div class="div-contenido container-fluid" v-cloak>
    <!-- Barra de navegacion en la parte superior-->
    <div class="row" id="div-cabecera">
      <div class="col-sm-10">
        <modulo-barra-nav :breadcrumb="breadcrumb"></modulo-barra-nav>
      </div>
      <div class="col-sm-2">
        <img src="/images/svg/iconoPolhibou.svg" alt="Logo Polhibou" />
      </div>
    </div>

    <!--Contenido -->
    <div class="row" id="div-body">
      <template v-if="usuario">
        <div class="nombre-usuario">
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">

              <i class="fas fa-user-circle"></i> {{usuario.nombre}} <i class="fas fa-bars"></i>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/view-actualizar-usuario">Cambiar contraseña</a>
              <div class="dropdown-divider"></div>
              <a v-if="usuario.nombre !='Visitante'" class="dropdown-item" href="/logout">Cerrar sesión</a>
            </div>
          </div>

        </div>

      </template>
      <div v-else class="nombre-usuario"> <a href="/view-login">Inicia Sesión</a> | <a
          href="/view-registro-usuario">Regístrate</a> </div>
      <div class="col">

        <div class=" formularioCentralSmall jumbotron">
          <div class="lista-cursos-disponible">
          <h1   class="titulo-centrado"><span data-hintPosition="top-left" data-hint="Seleccione un curso de la lista">CURSOS DISPONIBLES</span></h1>
          <!--list-group-item btn-curso  list-group-item-action flex-column align-items-start-->
          <template v-for="(curso, index) in cursosPublicados">
            <button :id="curso.id" type="button" class=" button " @click="abrirCurso(curso.id)">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{curso.nombre}}</h5>
                <!--span hace que los contenidos se presenten en linea-->
                <span>
                  {{index+1}}
                </span>
              </div>
              <p class="mb-1 d-flex w-100 justify-content-between">{{curso.descripcion}}</p>
            </button>
          </template>
        </div>
        </div>
      </div>

    </div>

  </div>

</div>