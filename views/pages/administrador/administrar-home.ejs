<div id="administrar-home" class="container-fluid">

  <!-- Modal Eliminar-->
  <div class="modal fade" id="modalConfirmaEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Eliminar Curso </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Quieres eliminar el curso: <strong>{{cursoEliminar.nombre}}</strong></p>
          <p>Se eliminarán también sus módulos asociados</p>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal" @click="eliminarDocumento()">Aceptar</button>
          <a class="btn btn-primary" href="" data-dismiss="modal" role="button">Cancelar</a>
        </div>
      </div>
    </div>
  </div>


  <!-- Pagina principal -->
  <modulo-contenedor-admin :breadcrumb="breadcrumb">
    <div class="container">
      <div class="row">
        <div class="col">
          <h3>Últimos estudiantes logeados</h3>
          <div class="list-group">
            <a v-for="estudiante in estudiantes" href="#"
              class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{estudiante.nombre}}</h5>
                <span class="badge badge-primary badge-pill">puntos: </span>
                <span class="badge badge-primary badge-pill">nivel: </span>
              </div>
              <p class="mb-1">ultimo Acceso: {{estudiante.ultimoAcceso}}</p>
              <p class="mb-1">Cursos tomados:</p>
              <p v-for="curso in estudiante.curso" class="mb-1">{{curso.nombre}}</p>
            </a>
            <!-- <a class="list-group-item list-group-item-action" href="#"><i class="fas fa-plus"></i> Agregar
              Estudiante</a> -->
          </div>
        </div>
        <div class="col">
          <h3>Cursos</h3>
          <div class="list-group">
            <button :id="curso.id" type="button" v-for="curso in cursos" :key="curso.id"
              class="btnCurso list-group-item list-group-item-action flex-column align-items-start">
              <!-- @click="abrirCurso(curso.id)"> -->
              <div class="d-flex w-100 justify-content-between">
                <input :id="'input'+curso.id" v-if="inputSeleccionado" type="text" v-model="curso.nombre" :class="[formErrors.nombre ? 'is-invalid' : '']">
                <h5 v-else class="mb-1">{{curso.nombre}}</h5>
                <div class="invalid-feedback" v-if="formErrors.nombre">El campo no puede estar vacío</div>
                <!--span hace que los contenidos se presenten en linea-->
                <span>
                  <a v-if="editarCurso" @click.stop="validarCampos(curso)" title="Editar Curso"><i
                      class="fas fa-save"></i></a>
                  <a v-else @click.stop="mostrarEditarCurso(curso.id)" data-placement="top" title="Editar Curso"> <i
                      class="fas fa-edit"></i> </a>
                  <a data-toggle="modal" data-target="#modalConfirmaEliminar"
                    @click.stop="seleccionaCursoEliminar(curso)" data-placement="top" title="Eliminar Curso"><i
                      class="fas fa-trash-alt"></i></a>
                </span>
              </div>
              <input v-if="editarCurso" type="text" v-model="curso.descripcion">
              <p v-else class="mb-1">{{curso.descripcion}}</p>
            </button>
            <a class="list-group-item list-group-item-action" href="/view-crear-curso"><i class="fas fa-plus"></i>
              Agregar
              Curso</a>
          </div>


        </div>
      </div>
    </div>
  </modulo-contenedor-admin>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>