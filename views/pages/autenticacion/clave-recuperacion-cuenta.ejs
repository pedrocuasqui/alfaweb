<div id="clave-recuperacion-cuenta" v-cloak>
  <modulo-contenedor-admin :usuario="usuario">

    <form @submit.prevent="validarFormulario">
      <h3 class="centrado_horizontal">Recuperación de cuenta</h3>

      <div class="form-group">
        <label for="password">Ingresa el código de 6 dígitos</label>
        <input name="password" class="form-control" id="password" :class="[formErrors.password ? 'is-invalid' : '']"
          v-model.trim="formData.password">
        <div class="invalid-feedback" v-if="formErrors.password">Ingrese el código.</div>
        <div class="invalid-feedback" v-if="formErrors.erroneo">Código erróneo</div>
      </div>


      <div class="form-group">
        <input type="submit" value="Verificar código" class="btn btn-primary">
      </div>

    </form>

  </modulo-contenedor-admin>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>